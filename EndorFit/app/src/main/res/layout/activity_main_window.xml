<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainWindowActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="620dp"
        android:id="@+id/relLayoutMain">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="Show exercises list"
            android:id="@+id/buttonToExercises"
            />

        <Button
            android:id="@+id/buttonStartRunningMode"
            android:layout_width="135dp"
            android:layout_height="87dp"
            android:layout_above="@+id/buttonToExercises"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="139dp"
            android:layout_marginTop="117dp"
            android:layout_marginEnd="137dp"
            android:layout_marginBottom="82dp"
            android:text="RUNNING MODE " />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonCompletedPlans"
            android:text="Completed"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linLayoutBot"
        android:layout_below="@+id/relLayoutMain"
        android:background="@color/colorPrimary"
        android:weightSum="99">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="33"
            android:layout_height="match_parent"
            android:src="@drawable/ic_assignment_white_24dp"
            android:id="@+id/imageViewLeftIcon"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="33"
            android:layout_height="match_parent"
            android:src="@drawable/ic_fitness_fit_white_24dp"
            android:id="@+id/imageViewCenterIcon"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="33"
            android:layout_height="match_parent"
            android:src="@drawable/ic_assignment_ind_white_24dp"
            android:id="@+id/imageViewRightIcon"/>

    </LinearLayout>
</RelativeLayout>